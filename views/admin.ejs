<!doctype html>
<html lang="en">
  <head>
    <title>Tạo tài khoản mới</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <link rel="stylesheet" href="/stylesheet/style.css">
    <link rel="icon" type="image/png" href="https://iconarchive.com/download/i85627/graphicloads/100-flat/student.ico">

    <!-- Bootstrap CSS -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
    <link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js" integrity="sha512-q/dWJ3kcmjBLU4Qc47E4A9kTB4m3wuTY7vkFJDTZKjTs8jhyGQnaUrxa0Ytd0ssMZhbNua9hE+E7Qv1j+DyZwA==" crossorigin="anonymous"></script>

  </head>
  <body>
    <div >
        <hr>

        <div class="row justify-content-center">
        <div class="animated bounceInDown">
        <div class="card">
        <header class="card-header">
            <h4 class="card-title mt-2 text-center">Tạo tài khoản mới</h4>
        </header>
        <article class="card-body">
        <form action="/login/register" method="POST">
            <%- include('./partials/messages.ejs') %> 
            <div class="form-row">
                <label>Họ và tên</label>   
                <input name="name" type="text" class="form-control" placeholder="" value="<%= name %>" required>
            </div> <!-- form-row end.// -->
            <div class="form-group">
                <label>Địa chỉ emal</label>
                <input name="email" type="email" class="form-control" placeholder="" value="<%= email %>" required>
            </div> <!-- form-group end.// -->
            <div class="form-row">
                <label>Khoa hoặc văn phòng</label>
                  <select id="falcuty" multiple name="falcuty" class="form-control">
                  <option value="KHOA HỌC THỂ THAO">Khoa học thể thao</option>
                  <option value="KHOA HỌC ỨNG DỤNG">Khoa học ứng dụng</option>
                  <option value="DƯỢC">Dược</option>
                  <option value="LUẬT">Luật</option>
                  <option value="NGOẠI NGỮ">Ngoại ngữ</option>
                  <option value="QUẢN TRỊ KINH DOANH">Quản trị kinh doanh</option>
                  <option value="KẾ TOÁN">Kế toán</option>
                  <option value="TÀI CHÍNH NGÂN HÀNG">Tài chính ngân hàng</option>
                  <option value="MÔI TRƯỜNG VÀ BẢO HỘ LAO ĐỘNG">Môi trường và bảo hộ lao động</option>
                  <option value="KHOA HỌC XÃ HỘI VÀ NHÂN VĂN">Khoa học xã hội & nhân văn</option>
                  <option value="CÔNG NGHỆ THÔNG TIN">Công nghệ thông tin</option>
                  <option value="ĐIỆN - ĐIỆN TỬ">Điện - Điện tử</option>
                  <option value="TOÁN - THỐNG KÊ">Toán - Thống kê</option>
                  <option value="MỸ THUẬT CÔNG NGHIỆP">Mỹ thuật công nghiệp</option>
                  <option value="KỸ THUẬT CÔNG TRÌNH">Kỹ thuật công trình</option>
                  <option value="LAO ĐỘNG VÀ CÔNG ĐOÀN">Lao động và công đoàn</option>
                  <option value="PHÒNG CTHSSV">Phòng CTHSSV</option>
                  <option value="PHÒNG TÀI CHÍNH">Phòng Tài Chính</option>
                  <option value="PHÒNG ĐẠI HỌC">Phòng Đại Học</option>
                </select>
                  <small class="form-text text-muted">Holding Ctrl to choose multiple options</small>
            </div> <!-- form-row.// -->
            <div class="form-row">
                <label>Tạo tài khoản với vai trò</label>
                  <select name="role" multiple class="form-control">
                    <option value="admin">Administrator</option>
                    <option value="falcuty">Facuty & Office</option>
                    <option value="student">Student</option>
                  </select>
            </div> <!-- form-row.// -->
            <div class="form-group">
                <label>Tạo Password mới</label>
                <input name="password" class="form-control" type="password" value="<%= password %> ">
            </div> <!-- form-group end.// -->  
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Tạo tài khoản  </button>
                <button type="button" class="btn btn-white btn-block"><a href="/newfeed">Trở về</a></button>
            </div> <!-- form-group// -->      
        </form>
        </article> <!-- card-body end .// -->
        </div> <!-- card.// -->
        </div> <!-- col.//-->

        </div> <!-- row.//-->

        </div> 
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/javascripts/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>